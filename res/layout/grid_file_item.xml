<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/select_file_background"
    android:orientation="vertical"
    android:padding="5dip" >

    <CheckBox
        android:id="@+id/checkbox_item"
        android:layout_width="@dimen/checkbox_width1"
        android:layout_height="@dimen/checkbox_width1"
        android:layout_gravity="right"
        android:background="@drawable/selector_file_checkbox"
        android:button="@null"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"
        android:gravity="right"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_file_width_grid"
        android:layout_height="@dimen/icon_file_width_grid"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:ellipsize="middle"
        android:maxEms="13"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="13dp" />

</LinearLayout>