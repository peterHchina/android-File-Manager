<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@drawable/qb_tenpay_tips_round_black"
    android:paddingBottom="10sp"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:paddingTop="10sp" >

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/CustomProgressStyle"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/preview_Width1"
        android:layout_height="@dimen/preview_Width1"
        android:layout_marginTop="15dip"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/searching"
        android:paddingLeft="5px"
        android:paddingTop="5px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dip" >

        <TextView
            android:id="@+id/define_progress_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/serach_processing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>